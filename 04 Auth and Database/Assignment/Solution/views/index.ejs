<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TODO</title>
    <link id="main-css" rel="stylesheet" href="style.css" />
  </head>
  <body>

    <!-- Form for adding TODOS -->
    <h1 style="margin-bottom: 40px;">TODO APP</h1>
    <div class="box">
      <form action="/" method="POST">
        <h2 style="margin-top: 40px; margin-bottom: 30px;" class="">
          Enter Todo Here
        </h2>
        <input type="text" name="todo" placeholder="type todo here" value="" />
        <button class="" type="submit">
          Submit
        </button>
      </form>
      <br />

      <!-- Listing out the TODO LIST -->
      <div class="todos">
        <% todos.forEach(element => { %>
        <h3
          class="todo"
          style="text-align: left; margin-bottom: 10px; margin: 20px 100px;"
        >
          <%= `${element.id}) ${element.todo}` %>
          <a class="x-button" href=<%=`http://localhost:3000/del/${element.id}`%>>x</a>
        </h3>

        <% }) %>
      </div>
    </div>
  </body>
</html>
